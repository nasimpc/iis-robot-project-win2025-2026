<?xml version="1.0"?>
<robot name="room">
  
  <!-- ==================== FLOOR ==================== -->
  <link name="floor">
    <visual>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <box size="10 10 0.1"/>
      </geometry>
      <material name="dark_floor">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <geometry>
        <box size="10 10 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <mass value="1000"/>
      <inertia ixx="8333" ixy="0" ixz="0" iyy="8333" iyz="0" izz="16666"/>
    </inertial>
  </link>

  <!-- ==================== WALLS ==================== -->
  <!-- North Wall (+Y) -->
  <link name="wall_north">
    <visual>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 10"/>
      </geometry>
      <material name="light_wall">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <mass value="500"/>
      <inertia ixx="4166" ixy="0" ixz="0" iyy="4166" iyz="0" izz="4166"/>
    </inertial>
  </link>
  <joint name="wall_north_joint" type="fixed">
    <parent link="floor"/>
    <child link="wall_north"/>
    <origin xyz="0 5.05 0" rpy="0 0 0"/>
  </joint>

  <!-- South Wall (-Y) -->
  <link name="wall_south">
    <visual>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 10"/>
      </geometry>
      <material name="light_wall"/>
    </visual>
    <collision>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="10 0.1 10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <mass value="500"/>
      <inertia ixx="4166" ixy="0" ixz="0" iyy="4166" iyz="0" izz="4166"/>
    </inertial>
  </link>
  <joint name="wall_south_joint" type="fixed">
    <parent link="floor"/>
    <child link="wall_south"/>
    <origin xyz="0 -5.05 0" rpy="0 0 0"/>
  </joint>

  <!-- East Wall (+X) -->
  <link name="wall_east">
    <visual>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 10 10"/>
      </geometry>
      <material name="light_wall"/>
    </visual>
    <collision>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 10 10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <mass value="500"/>
      <inertia ixx="4166" ixy="0" ixz="0" iyy="4166" iyz="0" izz="4166"/>
    </inertial>
  </link>
  <joint name="wall_east_joint" type="fixed">
    <parent link="floor"/>
    <child link="wall_east"/>
    <origin xyz="5.05 0 0" rpy="0 0 0"/>
  </joint>

  <!-- West Wall (-X) -->
  <link name="wall_west">
    <visual>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 10 10"/>
      </geometry>
      <material name="light_wall"/>
    </visual>
    <collision>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 10 10"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 5" rpy="0 0 0"/>
      <mass value="500"/>
      <inertia ixx="4166" ixy="0" ixz="0" iyy="4166" iyz="0" izz="4166"/>
    </inertial>
  </link>
  <joint name="wall_west_joint" type="fixed">
    <parent link="floor"/>
    <child link="wall_west"/>
    <origin xyz="-5.05 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ==================== CEILING ==================== -->
  <link name="ceiling">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 10 0.1"/>
      </geometry>
      <material name="white_ceiling">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="10 10 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1000"/>
      <inertia ixx="8333" ixy="0" ixz="0" iyy="8333" iyz="0" izz="16666"/>
    </inertial>
  </link>
  <joint name="ceiling_joint" type="fixed">
    <parent link="floor"/>
    <child link="ceiling"/>
    <origin xyz="0 0 10.05" rpy="0 0 0"/>
  </joint>

</robot>
